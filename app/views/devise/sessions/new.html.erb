<div class="container">
<h2 class="text-center m-3">Ingresar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, label: "ContraseÃ±a",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Ingresar", class: "btn btn-outline-secondary rounded-pill" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
